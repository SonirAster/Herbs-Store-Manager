<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id='hs_stock_action' model='ir.actions.act_window'>
        <field name='name'>Stock</field>
        <field name='res_model'>hs.stock</field>
        <field name='view_mode'>list,form</field>
        <field name="help" type='html'>
            <p class="o_view_nocontent_smiling_face">
                Create a new stock item
            </p>
        </field>
    </record>

    <!-- List/Tree View -->
    <record id="hs_stock_view_tree" model="ir.ui.view">
        <field name="name">hs.stock.tree.view</field>
        <field name="model">hs.stock</field>
        <field name="arch" type="xml">
            <list string="Stock items list">
                <field name="name"/>
                <field name="quantity"/>
                <field name="price"/>
                <field name="cost"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="hs_stock_view_form" model="ir.ui.view">
        <field name="name">hs.stock.form.view</field>
        <field name="model">hs.stock</field>
        <field name="arch" type="xml">
            <form string="Orders form">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="quantity"/>
                    </group>
                    <group>
                        <field name="price"/>
                        <field name="cost"/>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/> 
                        </page>
                        <page string="Propeties">
                            <field name="properties"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_hs_orders_search" model="ir.ui.view">
        <field name="name">hs.stock.form.view</field>
        <field name="model">hs.stock</field>
        <field name="arch" type="xml">
            <search string="hs orders search">
                <field name="name" string="Stock item name" />
                <field name="properties" string="Properties"/>
            </search>
        </field>
    </record>

</odoo>