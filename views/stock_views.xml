<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id='hs_stock_action' model='ir.actions.act_window'>
        <field name='name'>Stock</field>
        <field name='res_model'>hs.stock</field>
        <field name='view_mode'>list,form</field>
        <field name="help" type='html'>
            <p class="o_view_nocontent_smiling_face">
                Create a new stock item
            </p>
        </field>
    </record>

    <record id="hs_stock_view_tree" model="ir.ui.view">
        <field name="name">hs.stock.tree.view</field>
        <field name="model">hs.stock</field>
        <field name="arch" type="xml">
            <list string="Stock items list">
                <field name="name"/>
                <field name="quantity"/>
                <field name="price"/>
                <field name="cost"/>
            </list>
        </field>
    </record>

    <record id="hs_stock_view_form" model="ir.ui.view">
        <field name="name">hs.stock.form.view</field>
        <field name="model">hs.stock</field>
        <field name="arch" type="xml">
            <form string="Orders form">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="quantity"/>
                        </group>
                        <group>
                            <field name="cost"/>
                            <field name="price"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/> 
                        </page>
                        <page string="Propeties">
                            <field name="properties"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hs_stock_search" model="ir.ui.view">
        <field name="name">hs.stock.form.view</field>
        <field name="model">hs.stock</field>
        <field name="arch" type="xml">
            <search string="hs stock search">
                <field name="description" string="Product name and description"
                    filter_domain="['|', ('name', 'ilike', self), ('description', 'ilike', self)]"/> 
                <field name="properties" string="Properties"
                    filter_domain="[('properties', 'ilike', self)"/> 
                <filter string="Is running out" name="is_running_out" domain="[('quantity', '&lt;', 5)]" />
            </search>
        </field>
    </record>

</odoo>