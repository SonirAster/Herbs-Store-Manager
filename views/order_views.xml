<?xml version='1.0' encoding='utf-8'?>
<odoo>

    <record id='hs_orders_action' model='ir.actions.act_window'>
        <field name='name'>Orders list</field>
        <field name='res_model'>hs.order</field>
        <field name='view_mode'>list,form</field>
        <field name="help" type='html'>
            <p class="o_view_nocontent_smiling_face">
                Create a new order
            </p>
        </field>
    </record>

    <!-- List/Tree View -->
    <record id="hs_order_view_tree" model="ir.ui.view">
        <field name="name">hs.order.tree.view</field>
        <field name="model">hs.order</field>
        <field name="arch" type="xml">
            <list string="Orders list">
                <field name="status"/>
                <field name="name" optional="show"/>
                <field name="customer_id" optional="show"/>
                <field name="urgency" optional="show"/>
                <field name="delivery_point" optional="show"/>
                <field name="price" optional="show"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="hs_order_view_form" model="ir.ui.view">
        <field name="name">hs.order.form.view</field>
        <field name="model">hs.order</field>
        <field name="arch" type="xml">
            <form string="Orders form">
                <header>
                    <button type="object" class='oe_highlight'
                        name="action_fulfill_order" 
                        string="Mark as Fulfilled" 
                        invisible="status == 'canceled' or status == 'fulfilled'" />
                    <button type="object" class='oe_highlight'
                        name='action_send_order' 
                        string="Mark as Sent" 
                        invisible="status == 'canceled'" />
                    <button type="object" 
                        name='action_cancel_order' 
                        string="Mark as Canceled" 
                        invisible="status == 'canceled'" />
                    <field name="status" widget='statusbar' statusbar_visible='fulfilled,sent,pending'/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="customer_id"/>
                        </group>
                        <group>
                            <field name="urgency"/>
                            <field name="price"/>
                            <field name="delivery_point"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description"/> 
                        </page>
                        <page string="Package">
                            <field name="package_ids"/>
                        </page>
                    </notebook>
                </sheet>
                <!-- <div class="oe_chatter">
                    <field name="message_follower_ids" groups='base.group_user'/>
                    <field name="message_ids"/>
                </div> -->
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_hs_orders_search" model="ir.ui.view">
        <field name="name">hs.order.form.view</field>
        <field name="model">hs.order</field>
        <field name="arch" type="xml">
            <search string="hs orders search">
                <field name="name" string="Title" />
                <field name="delivery_point" string='Delivery Point'/>
                <field name="package_ids" string='Package'/>
                <field name="description" string='Description'/>
                <filter name="Urgent Orders" domain="[('urgency', '=', 'urgent')]"/>
            </search>
        </field>
    </record>

</odoo>